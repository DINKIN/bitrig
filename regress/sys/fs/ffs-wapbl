setup()
{
	dd if=/dev/zero of=fakedisk bs=1M count=8
	vnconfig vnd0 fakedisk
	disklabel -wA vnd0
	newfs /dev/rvnd0a
	mount -o log /dev/vnd0a /mnt
}

cleanup()
{
	umount /dev/vnd1a
	umount /dev/vnd0a
	vnconfig -u vnd1
	vnconfig -u vnd0
	rm -f fakedisk
	rm -f fstest
	rm -f fstest.o
}

mountfs()
{
	dd if=/dev/zero of=tmpdisk bs=1M count=2
	vnconfig vnd1 tmpdisk
	disklabel -wA vnd1
	newfs /dev/rvnd1a
	mount -o log /dev/vnd1a $1
}

mountfs_small()
{
	dd if=/dev/zero of=tmpdisk bs=1M count=1
	vnconfig vnd1 tmpdisk
	disklabel -wA vnd1
	newfs /dev/rvnd1a
	mount -o log /dev/vnd1a $1
	dd if=/dev/zero of=$1/x bs=700k count=1
}

umountfs()
{
	umount $1
	vnconfig -u vnd1
	rm tmpdisk
}
